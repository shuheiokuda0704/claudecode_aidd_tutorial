#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged for auto-fixes
pnpm exec lint-staged

# Run type checks
echo "ğŸ“ Type checking backend..."
